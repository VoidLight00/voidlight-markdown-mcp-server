# GitHub API 설정
GITHUB_TOKEN=your_github_token_here

# MCP 서버 설정
MARKITDOWN_ENABLE_PLUGINS=true
MARKITDOWN_KOREAN_SUPPORT=true
MARKITDOWN_LOG_LEVEL=INFO

# LLM 설정
OPENAI_API_KEY=your_openai_api_key_here
MARKITDOWN_LLM_MODEL=gpt-4o

# Azure Document Intelligence 설정
AZURE_DOCINTEL_ENDPOINT=your_azure_endpoint_here
AZURE_DOCINTEL_KEY=your_azure_key_here

# 네이버 클로바 OCR 설정
NAVER_CLOVA_OCR_URL=your_naver_clova_url_here
NAVER_CLOVA_OCR_SECRET=your_naver_clova_secret_here

# Google Cloud Vision 설정
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# 파일 처리 설정
MARKITDOWN_MAX_FILE_SIZE=104857600  # 100MB
MARKITDOWN_WORKER_THREADS=4
MARKITDOWN_CACHE_ENABLED=true
MARKITDOWN_CACHE_SIZE=1000
MARKITDOWN_TEMP_DIR=/tmp/markitdown

# 로깅 설정
MARKITDOWN_LOG_FILE=markitdown.log

# 플러그인 설정
MARKITDOWN_PLUGINS=my_plugin:MyConverter,another_plugin:AnotherConverter

# 한국어 지원 설정
MARKITDOWN_KOREAN_FONT_PATH=path/to/korean/font.ttf
MARKITDOWN_KOREAN_DICT_PATH=path/to/korean/dict